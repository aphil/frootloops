{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "client: chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/admin"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "server: nuxt",
            "args": [
                "dev"
            ],
            "osx": {
                "program": "${workspaceFolder}/admin/node_modules/.bin/nuxt"
            },
            "linux": {
                "program": "${workspaceFolder}/admin/node_modules/.bin/nuxt"
            },
            "windows": {
                "program": "${workspaceFolder}/admin/node_modules/nuxt/bin/nuxt.js"
            }
        },
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "pwa-chrome",
            "webRoot": "${workspaceFolder}/admin"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Iga Flyers Fetcher",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\FlyersFetcher\\fetcher.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Ricardo Recipes Fetcher",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\RecipesFetcher\\fetcher.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Matchmaking",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\MatchMaking\\matcher.js"
        }
    ],
    "compounds": [
        {
            "name": "fullstack: nuxt",
            "configurations": [
                "server: nuxt",
                "client: chrome"
            ]
        }
    ],
    "resolveSourceMapLocations": [
        "${workspaceFolder}/admin/**",
        "!**/node_modules/**"
    ]
}